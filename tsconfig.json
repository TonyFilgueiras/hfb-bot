    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "esnext",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "ignoreDeprecations": "5.0",
        "allowJs": true,
        "outDir": "dist",
    },
